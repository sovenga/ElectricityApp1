<Page
    x:Class="ElectricityApp.AddAppliancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/image5.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="385" Margin="0,93,0,0" VerticalAlignment="Top" Width="627">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="22*"/>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" Margin="198,10,0,0" TextWrapping="Wrap" Text="ADD APPLIANCE" VerticalAlignment="Top" FontSize="20" Width="187" FontStyle="Italic" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="41,57,0,0" TextWrapping="Wrap" Text="APPLIANCE NAME" VerticalAlignment="Top" FontSize="20"  RenderTransformOrigin="0.51,2.619"/>
            <TextBlock HorizontalAlignment="Left" Margin="41,126,0,0" TextWrapping="Wrap" Text="WATTS" VerticalAlignment="Top" FontSize="20"  RenderTransformOrigin="0.51,2.619"/>
            <TextBox x:Name="txtApplianceName" HorizontalAlignment="Left" Margin="365,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" Grid.ColumnSpan="2" />
            <TextBox x:Name="txtWatts" HorizontalAlignment="Left" Margin="365,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" Grid.ColumnSpan="2" />
            <Button x:ConnectionId='1' x:Name="btnAddAppliance" Content="ADD APPLIANCE" HorizontalAlignment="Left" Margin="7,272,0,0" VerticalAlignment="Top" Width="228"                               Height="63" Grid.Column="1">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBox x:Name="txtNumberOfItems" HorizontalAlignment="Left" Margin="8.925,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" Grid.Column="1"/>
            <TextBlock HorizontalAlignment="Left" Margin="41,195,0,0" TextWrapping="Wrap" Text="NUMBER OF ITEMS OF SAME TYPE" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.51,2.619"/>
            <Button x:ConnectionId='2' Content="BACK" HorizontalAlignment="Left" Margin="0,-86,0,0" VerticalAlignment="Top" Width="206"                      Foreground="{ThemeResource AppBarBackgroundThemeBrush}" Height="63">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="355,25,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="36" Width="627" FontWeight="Bold" Height="63"/>

    </Grid>
</Page>

