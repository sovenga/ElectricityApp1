<Page
    x:Class="ElectricityApp.AddAppliancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/image1.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="385" Margin="355,259,0,0" VerticalAlignment="Top" Width="627">
            <TextBlock HorizontalAlignment="Left" Margin="108,-74,0,0" TextWrapping="Wrap" Text="ADD APPLIANCE" VerticalAlignment="Top" FontSize="36" Width="402" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="94,126,0,0" TextWrapping="Wrap" Text="APPLIANCE NAME" VerticalAlignment="Top" FontSize="20"  RenderTransformOrigin="0.51,2.619"/>
            <TextBlock HorizontalAlignment="Left" Margin="94,189,0,0" TextWrapping="Wrap" Text="WATTS" VerticalAlignment="Top" FontSize="20"  RenderTransformOrigin="0.51,2.619"/>
            <TextBox x:Name="txtApplianceName" HorizontalAlignment="Left" Margin="365,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" />
            <TextBox x:Name="txtWatts" HorizontalAlignment="Left" Margin="365,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" />
            <Button x:ConnectionId='1' x:Name="btnAddAppliance" Content="ADD APPLIANCE" HorizontalAlignment="Left" Margin="453,297,0,0" VerticalAlignment="Top" Width="167"                              >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBox x:Name="txtNumberOfItems" HorizontalAlignment="Left" Margin="467,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
            <TextBlock HorizontalAlignment="Left" Margin="94,250,0,0" TextWrapping="Wrap" Text="NUMBER OF ITEMS OF SAME TYPE" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.51,2.619"/>
            <Button x:ConnectionId='2' Content="BACK" HorizontalAlignment="Left" Margin="-341,-234,0,0" VerticalAlignment="Top" Width="206"                      Foreground="{ThemeResource AppBarBackgroundThemeBrush}" Height="63">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="355,25,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="36" Width="627" FontWeight="Bold" Height="63"/>

    </Grid>
</Page>

