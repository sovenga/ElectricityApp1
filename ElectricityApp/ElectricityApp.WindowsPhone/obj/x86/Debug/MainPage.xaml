<Page 
    x:Class="ElectricityApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="PageGrid">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/image.jpg"/>
        </Grid.Background>
        <Grid x:Name="logingrid" Margin="32,0,0,183" HorizontalAlignment="Left" Width="659" Height="543" VerticalAlignment="Bottom">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/image6.jpg"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="159*"/>
                <ColumnDefinition Width="203*"/>
                <ColumnDefinition Width="73*"/>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" Margin="84,10,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="20" Width="325" Foreground="White" FontWeight="Bold" Height="33" Grid.ColumnSpan="2"/>
            <TextBlock x:ConnectionId='1' HorizontalAlignment="Left" Margin="12,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"                                               RenderTransformOrigin="0.51,2.619" Width="111" Foreground="White">
        		<Run FontWeight="Bold" FontSize="22" Text="Username"/>
            </TextBlock>
            <TextBlock x:ConnectionId='2' HorizontalAlignment="Left" Margin="12,145,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="20"                                               RenderTransformOrigin="0.51,2.619" FontWeight="Bold" Width="94" Foreground="White"/>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="12,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" Grid.ColumnSpan="2"/>
            <Button x:ConnectionId='3' x:Name="btnLogin" Content="LOGIN" HorizontalAlignment="Right" Margin="0,0,224,258" VerticalAlignment="Bottom"                      RenderTransformOrigin="-0.486,0.591" Width="179" Height="54" Grid.ColumnSpan="2">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.BorderBrush>
                    <ImageBrush Stretch="Fill"/>
                </Button.BorderBrush>
            </Button>
            <HyperlinkButton x:ConnectionId='4' x:Name="linkRegister" Content="Register" HorizontalAlignment="Left" Margin="162,470,0,0" VerticalAlignment="Top"                               Foreground="White"/>
            <HyperlinkButton x:ConnectionId='5' x:Name="linkForgotpassword" Content="Forgot Password" HorizontalAlignment="Left" Margin="-5,470,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.66,0.627"                                 Foreground="White"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="12,174,0,0" VerticalAlignment="Top" Width="325" Grid.ColumnSpan="2"/>
        </Grid>

    </Grid>
</Page>

