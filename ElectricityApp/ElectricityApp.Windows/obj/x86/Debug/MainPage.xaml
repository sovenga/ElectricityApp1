<Page 
    x:Class="ElectricityApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="PageGrid" Margin="0,0.333,10,-0.333" >
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/image8.JPG"/>
        </Grid.Background>
        <Button x:ConnectionId='1' x:Name="btnLogin" Content="LOGIN" HorizontalAlignment="Left" Margin="0,0,769,24" VerticalAlignment="Bottom"                      RenderTransformOrigin="-0.486,0.591" Width="300" Height="65">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.BorderBrush>
                <ImageBrush Stretch="Fill"/>
            </Button.BorderBrush>
        </Button>
        <Grid x:Name="mygrid" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,22,0,50" Width="380">
            <TextBlock HorizontalAlignment="Left" Margin="0,10,-4,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="20" Width="333" Foreground="White" FontWeight="Bold" Height="53"/>
            <TextBlock x:ConnectionId='2' HorizontalAlignment="Left" Margin="22,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"                                               RenderTransformOrigin="0.51,2.619" Width="127" Foreground="White" Height="42">
        		<Run FontWeight="Bold" FontSize="22" Text="Username"/>
            </TextBlock>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="22,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" Height="28"/>
            <TextBlock x:ConnectionId='3' HorizontalAlignment="Left" Margin="22,174,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="20"                                               RenderTransformOrigin="0.51,2.619" FontWeight="Bold" Width="151" Foreground="White" Height="39"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="22,218,0,0" VerticalAlignment="Top" Width="231" Height="31"/>
            <HyperlinkButton x:ConnectionId='4' x:Name="linkForgotpassword" Content="Forgot Password" HorizontalAlignment="Left" Margin="22,326,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.66,0.627"                                 Foreground="White" Background="#FFD40F0F" FontSize="20" Width="218" Height="53"/>
            <HyperlinkButton x:ConnectionId='5' x:Name="linkRegister" Content="Register" HorizontalAlignment="Left" Margin="11,254,0,0" VerticalAlignment="Top"                               Foreground="White" Width="138" FontWeight="Bold" Height="76"/>
            <Button x:ConnectionId='6' x:Name="btnLoginButton" Content="Login" HorizontalAlignment="Left" Margin="22,392,0,0" VerticalAlignment="Top" Width="218"                             />
            <HyperlinkButton x:ConnectionId='7' Content="HyperlinkButton" HorizontalAlignment="Left" Margin="154,269,0,0" VerticalAlignment="Top"                                />
        </Grid>

    </Grid>
</Page>

