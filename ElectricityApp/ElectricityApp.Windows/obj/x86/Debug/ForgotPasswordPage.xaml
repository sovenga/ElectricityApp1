<Page x:Name="PageGrid"
    x:Class="ElectricityApp.ForgotPasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0,0.333,0,1.667">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/image8.JPG"/>
        </Grid.Background>
        <Grid x:Name="mygrid" HorizontalAlignment="Center" Height="571" VerticalAlignment="Top" Width="400" Margin="0,-2,0,0">
            <TextBlock HorizontalAlignment="Left" Margin="5,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="106" Height="24" FontSize="16" FontWeight="Bold" Foreground="White" Text="USERNAME"/>
            <TextBlock HorizontalAlignment="Left" Margin="61,51,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="20" Width="334" FontWeight="Bold" Foreground="#FFF5EEEE"/>
            <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="130,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" Height="38"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="41" Width="215" FontSize="18">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFF10832" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            	<Run Text="forgot your "/>
            	<Run Text="PASSWORD"/>
            	<Run Text="?"/>
            </TextBlock>
            <Button x:ConnectionId='1' x:Name="btnBack" Content="BACK" HorizontalAlignment="Left" Margin="5,-3,0,0" VerticalAlignment="Top"                      Background="{x:Null}" Width="135" Height="35" FontSize="14"/>
            <TextBlock x:Name="lblPassword" HorizontalAlignment="Left" Margin="2,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="383" Height="186" Foreground="#FFC7C2C2" FontSize="36"/>
            <Button x:ConnectionId='2' x:Name="btnSub" Content="Submit" HorizontalAlignment="Left" Margin="175,170,0,0" VerticalAlignment="Top"                      Width="129"/>
        </Grid>

    </Grid>
</Page>

