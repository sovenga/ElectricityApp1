<Page x:Name="PageGrid"
    x:Class="ElectricityApp.ForgotPasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0,0.333,0,1.667">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/image8.JPG"/>
        </Grid.Background>
        <Grid x:Name="mygrid" HorizontalAlignment="Center" Height="631" VerticalAlignment="Top" Width="400" Margin="5,18,-5,-11">
            <TextBlock HorizontalAlignment="Left" Margin="19,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="106" Height="24" FontSize="16" FontWeight="Bold" Foreground="White" Text="USERNAME"/>
            <TextBlock HorizontalAlignment="Left" Margin="61,51,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="20" Width="334" FontWeight="Bold" Foreground="#FFF5EEEE"/>
            <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="135,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Height="38"/>
            <Button x:ConnectionId='1' x:Name="btnBack" Content="BACK" HorizontalAlignment="Left" Margin="5,-3,0,0" VerticalAlignment="Top"                      Background="{x:Null}" Width="125" Height="35" FontSize="14"/>
            <TextBlock x:Name="lblPassword" HorizontalAlignment="Left" Margin="2,420,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="383" Height="140" Foreground="#FFC7C2C2" FontSize="36"/>
            <Button x:ConnectionId='2' x:Name="btnSub" Content="Submit" HorizontalAlignment="Left" Margin="235,270,0,0" VerticalAlignment="Top"                      Width="129"/>
        </Grid>

    </Grid>
</Page>

