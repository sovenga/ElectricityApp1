<Page
    x:Class="ElectricityApp.AddMeterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/image8.JPG"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="363" Margin="70,125,0,0" VerticalAlignment="Top" Width="840" Background="Black">
            <TextBlock HorizontalAlignment="Left" Margin="40,131,0,0" TextWrapping="Wrap" Text="METER NUMBER" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="40,183,0,0" TextWrapping="Wrap" Text="CURRENT UNITS" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <TextBox x:Name="txtMeterNumber" HorizontalAlignment="Left" Margin="227,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global User Interface" Width="295"/>
            <TextBox x:Name="txtCurrentUnits" HorizontalAlignment="Left" Margin="227,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global User Interface" Width="295"/>
            <Button x:ConnectionId='1' x:Name="btnSave" Content="SAVE" HorizontalAlignment="Left" Margin="345,242,0,0" VerticalAlignment="Top" Width="180"                       FontFamily="Global User Interface">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock HorizontalAlignment="Left" Margin="156,46,0,0" TextWrapping="Wrap" Text="ADD YOUR METER BOX" VerticalAlignment="Top" FontSize="36" Width="413" FontWeight="Bold" FontStyle="Italic"/>
            <Button x:ConnectionId='2' Content="BACK" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top" Height="48" Width="98"                      FontWeight="Bold"/>
            <HyperlinkButton x:ConnectionId='3' x:Name="linkRemoveMeters" Content="REMOVE ALL METER BOXES" HorizontalAlignment="Left" Margin="37,241,0,0" VerticalAlignment="Top"                                Background="#FF151414"/>
        </Grid>
        <Image HorizontalAlignment="Left" Height="100" Margin="1185,162,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Page>

