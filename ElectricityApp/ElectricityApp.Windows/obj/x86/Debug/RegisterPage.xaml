<Page
    x:Class="ElectricityApp.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/image8.JPG"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="618" Margin="75,101,0,0" VerticalAlignment="Top" Width="608">
            <TextBlock x:ConnectionId='1' HorizontalAlignment="Left" Margin="145,-85,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="20" Width="324" FontWeight="Bold"                                              >
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="62,56,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" FontSize="22" Foreground="White" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="62,105,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="22" Foreground="White" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="62,150,0,0" TextWrapping="Wrap" Text="Confirm" VerticalAlignment="Top" FontSize="22" Foreground="White" FontWeight="Bold"/>
            <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="171,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.251,0.019" Width="298"/>
            <Button x:ConnectionId='2' x:Name="btnRegister" Content="REGISTER" HorizontalAlignment="Left" Margin="168,194,0,0" VerticalAlignment="Top"                           Width="304">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='3' x:Name="btnBack" Content="BACK" HorizontalAlignment="Left" Margin="-78,-102,0,0" VerticalAlignment="Top"                      >
                <Button.Background>
                    <ImageBrush Stretch="Fill"/>
                </Button.Background>
            </Button>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="171,99,0,0" VerticalAlignment="Top" Width="298"/>
            <PasswordBox x:Name="txtConfirm" HorizontalAlignment="Left" Margin="171,144,0,0" VerticalAlignment="Top" Width="298"/>
        </Grid>
        <Image HorizontalAlignment="Left" Height="67" Margin="442,0,0,0" VerticalAlignment="Top" Width="121"/>

    </Grid>
</Page>

